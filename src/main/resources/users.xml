<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:util="http://www.springframework.org/schema/util"
       xsi:schemaLocation="
        http://www.springframework.org/schema/beans
		http://www.springframework.org/schema/beans/spring-beans-3.2.xsd
		http://www.springframework.org/schema/util
		http://www.springframework.org/schema/util/spring-util-3.2.xsd">

    <bean id="user1" class="ua.epam.spring.hometask.domain.User">
        <property name="firstName" value="John"/>
        <property name="lastName" value="Duohn"/>
        <property name="id" value="0"/>
        <property name="email" value="abc@email.com"/>
    </bean>
    <bean id="user2" class="ua.epam.spring.hometask.domain.User">
        <property name="firstName" value="Dan"/>
        <property name="lastName" value="Bam"/>
        <property name="id" value="1"/>
        <property name="email" value="Dan@email.com"/>
    </bean>
    <bean id="user3" class="ua.epam.spring.hometask.domain.User">
        <property name="firstName" value="Raghu"/>
        <property name="id" value="2"/>
        <property name="email" value="Raghu@email.com"/>
    </bean>

    <util:map id="usersMap" value-type="ua.epam.spring.hometask.domain.User" key-type="java.lang.Long">
        <entry key="0" value-ref="user1"/>
        <entry key="1" value-ref="user2"/>
        <entry key="2" value-ref="user3"/>
    </util:map>
</beans>