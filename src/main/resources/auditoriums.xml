<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:util="http://www.springframework.org/schema/util"
       xmlns:p="http://www.springframework.org/schema/p"
       xsi:schemaLocation="
 		http://www.springframework.org/schema/beans
 		http://www.springframework.org/schema/beans/spring-beans-3.2.xsd
 		http://www.springframework.org/schema/util
 		http://www.springframework.org/schema/util/spring-util-3.2.xsd">

    <!--AUDITORIUMS-->
    <bean id="blue-auditorium" class="ua.epam.spring.hometask.domain.Auditorium"
          p:name="${blue.name}"
          p:numberOfSeats="${blue.number_of_seats}"
          p:vipSeats="#{'${blue.vip_seats}'.split(',')}">
    </bean>
    <bean id="green-auditorium" class="ua.epam.spring.hometask.domain.Auditorium"
          p:name="${green.name}"
          p:numberOfSeats="${green.number_of_seats}"
          p:vipSeats="#{'${green.vip_seats}'.split(',')}">
    </bean>
    <bean id="red-auditorium" class="ua.epam.spring.hometask.domain.Auditorium"
          p:name="${red.name}"
          p:numberOfSeats="${red.number_of_seats}"
          p:vipSeats="#{'${red.vip_seats}'.split(',')}">
    </bean>

    <util:map id="auditoriumMap" value-type="ua.epam.spring.hometask.domain.Auditorium" key-type="java.lang.Long">
        <entry key="1" value-ref="blue-auditorium"/>
        <entry key="2" value-ref="red-auditorium"/>
        <entry key="3" value-ref="green-auditorium"/>
    </util:map>

    <bean class="org.springframework.beans.factory.config.PropertyPlaceholderConfigurer">
        <property name="locations">
            <list>
                <value>classpath:auditoriums/auditoriums.properties</value>
            </list>
        </property>
        <property name="ignoreResourceNotFound" value="true"/>
        <property name="systemPropertiesMode">
            <util:constant
                    static-field="org.springframework.beans.factory.config.PropertyPlaceholderConfigurer.SYSTEM_PROPERTIES_MODE_OVERRIDE"/>
        </property>
    </bean>
</beans>