<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:util="http://www.springframework.org/schema/util"
       xmlns:p="http://www.springframework.org/schema/p"
       xmlns:c="http://www.springframework.org/schema/c"
       xsi:schemaLocation="
 		http://www.springframework.org/schema/beans
 		http://www.springframework.org/schema/beans/spring-beans-3.2.xsd
 		http://www.springframework.org/schema/util
 		http://www.springframework.org/schema/util/spring-util-3.2.xsd">

    <import resource="auditoriums.xml"/>
    <import resource="users.xml"/>
    <import resource="events.xml"/>
    <import resource="discount.xml"/>

    <bean id="demo" name="demo" class="ua.epam.spring.hometask.Demo">
        <property name="bookingService" ref="bookingService"/>
        <property name="auditoriumService" ref="auditoriumService"/>
        <property name="eventService" ref="eventService"/>
        <property name="userService" ref="userService"/>
        <property name="discountService" ref="discountService"/>
    </bean>

        <bean name="runner" class="ua.epam.spring.hometask.AppRunner">
        <property name="demo" ref="demo"/>
    </bean>
    <!--DAOS-->

    <bean id="auditoriumDao" class="ua.epam.spring.hometask.daos.impl.AuditoriumDaoImpl">
        <property name="auditoriumMap" ref="auditoriumMap"/>
    </bean>
    <bean id="eventDao" class="ua.epam.spring.hometask.daos.impl.EventDaoImpl">
        <property name="eventMap" ref="eventMap"/>
    </bean>

    <bean id="ticketDao" class="ua.epam.spring.hometask.daos.impl.TicketDaoImpl"/>
    <bean id="userDao" class="ua.epam.spring.hometask.daos.impl.UserDaoImpl">
        <property name="entityMap" ref="usersMap"/>
    </bean>

    <!--SERVICES-->
    <bean id="auditoriumService" class="ua.epam.spring.hometask.service.impl.AuditoriumServiceImpl"
          p:auditoriumDao-ref="auditoriumDao">
    </bean>
    <bean id="userService" class="ua.epam.spring.hometask.service.impl.UserServiceImpl"
          p:userDao-ref="userDao">
    </bean>
    <bean id="eventService" class="ua.epam.spring.hometask.service.impl.EventServiceImpl">
        <property name="eventDao" ref="eventDao"/>
    </bean>
    <bean id="bookingService" class="ua.epam.spring.hometask.service.impl.BookingServiceImpl">
        <property name="discountService" ref="discountService"/>
        <property name="ticketDAO" ref="ticketDao"/>
        <property name="userDao" ref="userDao"/>
    </bean>
</beans>