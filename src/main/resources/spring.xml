<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:util="http://www.springframework.org/schema/util"
       xmlns:p="http://www.springframework.org/schema/p"
       xmlns:c="http://www.springframework.org/schema/c"
       xsi:schemaLocation="
 		http://www.springframework.org/schema/beans
 		http://www.springframework.org/schema/beans/spring-beans-3.2.xsd
 		http://www.springframework.org/schema/util
 		http://www.springframework.org/schema/util/spring-util-3.2.xsd">

    <import resource="auditoriums.xml"/>
    <import resource="users.xml"/>
    <import resource="discount.xml"/>

    <bean id="demo" class="ua.epam.spring.hometask.Demo"/>

    <!--DAOS-->
    <bean id="auditoriumDao" class="ua.epam.spring.hometask.daos.impl.AuditoriumDaoImpl"/>
    <bean id="eventDao" class="ua.epam.spring.hometask.daos.impl.EventDaoImpl"/>
    <bean id="ticketDao" class="ua.epam.spring.hometask.daos.impl.TicketDaoImpl"/>
    <bean id="userDao" class="ua.epam.spring.hometask.daos.impl.UserDaoImpl"/>

    <!--SERVICES-->
    <bean id="auditoriumService" class="ua.epam.spring.hometask.service.impl.AuditoriumServiceImpl"
          p:auditoriumDao-ref="auditoriumDao">
    </bean>
    <bean id="userService" class="ua.epam.spring.hometask.service.impl.UserServiceImpl"
          p:userDao-ref="userDao">
    </bean>
    <bean id="eventService" class="ua.epam.spring.hometask.service.impl.EventServiceImpl"/>
    <bean id="bookingService" class="ua.epam.spring.hometask.service.impl.BookingServiceImpl">
        <property name="discountService" ref="discountService"/>
        <property name="ticketDAO" ref="ticketDao"/>
        <property name="userDao" ref="userDao"/>
    </bean>
</beans>